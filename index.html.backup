<html lang="es-ES" prefix="og: https://ogp.me/ns#">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Clima</title>

    <!-- Protocolo OpenGraph -->
    <meta property="og:title" content="Clima" />
    <meta property="og:type" content="website" />

